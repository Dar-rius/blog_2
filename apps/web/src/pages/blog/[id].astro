---
import Layout from '../../layouts/Layout.astro'
import Footer from '../../components/Footer.astro'
import {css} from '../../../styled-system/css'
import Content from '../../components/Content.astro'

export const prerender = false 
const {id} = Astro.params

const response = await fetch(`http://localhost:3333/blog/${id}`)
            .then((res) => res.json())
            .catch((err) => console.error(err))

//style
---

<Layout>
    <div class={css({textAlign:'center', color:'white'})}>
    <h1 class={css({fontSize:40, fontWeight:600, mt:10, mb: 5, px:'31%'})}>
        The world of reverse
    </h1>
    <p class={css({fontSize:14, px:'31%'})}>
        Proprietary code is often our enemy as open source developers. Breaking it
        down and developing versions that are interoperable with their code is one of 
         the great goals of the reverse engineering world.
    </p>
    </div>
    <Content data={response.content}/>
    <Footer/>
</Layout>
